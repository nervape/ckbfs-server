# Server Configuration
NODE_ENV=development
PORT=6759

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CKB Network Configuration
CKB_NETWORK=testnet

# CKB Client URLs (optional - leave empty to use defaults)
# Default mainnet: wss://mainnet.ckb.dev/ws or https://mainnet.ckb.dev/
# Default testnet: wss://testnet.ckb.dev/ws or https://testnet.ckb.dev/
CKB_MAINNET_URL=
CKB_TESTNET_URL=

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
HELMET_ENABLED=true

# Development Configuration
DEBUG=false
